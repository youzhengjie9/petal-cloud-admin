            <version>1.0-SNAPSHOT</version>
        </dependency>
        <!--       common security模块 -->
        <dependency>
            <groupId>com.petal.common.security</groupId>
            <artifactId>petal-common-security</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
